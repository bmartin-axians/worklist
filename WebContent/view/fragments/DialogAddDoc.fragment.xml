<core:FragmentDefinition xmlns="sap.m." xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="{i18n>add_doc}" contentWidth="40%" titleAlignment="Center">
		<Panel>
			<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false">
				<Label text="{i18n>doc_link}"/>
				<Input value="URL}"/>
				<Label text="{i18n>description}"/>
				<Input value="{Description}"/>
			</form:SimpleForm>
		</Panel>
		<buttons>
			<Button text="{i18n>ok}" icon="sap-icon://accept" press="onDialogClose"/>
			<Button text="{i18n>cancel}" icon="sap-icon://sys-cancel" press="onDialogClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>